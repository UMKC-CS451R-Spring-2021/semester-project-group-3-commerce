@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" media="screen and (min-device-width: 800px)" href="~/css/LoginDesktop.css" />
<link rel="stylesheet" media="screen and (max-width: 799px)" href="~/css/LoginMobile.css" />

<div class="loginContainer">
    <div class="loginInformation">
        <img class="loginInformation-BG" src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.usnews.com%2Fcmsmedia%2F0c%2F93%2Fe962a1d6467b8873be05cb374c47%2F140411-customerbank-stock.jpg&f=1&nofb=1" />

        <div class="loginInformation-Content">
            <div class="loginInformation-Label">
                <label class="font-weight-bold">What's your next challenge?</label>
                <div class="loginPartitionLine" style="background-color: white;"></div>
            </div>

            <p class="font-weight-normal">You’ve got big plans. Not sure where to start? When it comes to money, we’re here to help you connect the dots, no matter what your next step is.<em style="text-decoration: underline; text-decoration-style: dotted; cursor: help;" title="Source: From the Commerce Bank website">*</em></p>
        </div>
    </div>

    <div class="loginForm">
        <center>
            <div class="loginForm-Label">
                <label class="font-weight-bold">@ViewData["Title"]</label>
                <div class="loginPartitionLine"></div>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="text-align: left;">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align: left;">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="checkbox col">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div class="col">
                        <a href="/Identity/Account/ForgotPassword">Forgot password?</a>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="background-color: #006747;">Log in</button>
                </div>
            </form>

        </center>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<Commerce_WebApp.Models.Account>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "My Accounts";
}
<style type="text/css">
    /* table */
    .tg {
        border-collapse: separate;
        border-spacing: 0;
        color: #222;
    }

    .tg a {
        color: #222;
        text-decoration: underline;
    }

    .tg tr:hover td {
        background: #4FA800;
    }

    .tg td {
        border-bottom: 3px solid #007AA3;
        border-top: 3px solid #007AA3;
        font-family: Arial, sans-serif;
        font-size: 14px;
        overflow: hidden;
        padding: 14px 20px;
        word-break: normal;
        background-color: #faf9f7;
    }

    /* table alphanumeric item */
    .tg .tg-0pky {
        text-align: left;
        vertical-align: top
    }

    /* insert dollar sign before money items */
    .tg .tg-money:before {
        content: '$';
    }

    /* table money item */
    .tg .tg-money {
        text-align: right;
        vertical-align: top
    }

    /* table money header */
    .tg .moneyHeader {
        text-align: right;
    }

    .tg .tg-0lax {
        text-align: left;
        vertical-align: top
    }

    .tg-sort-header::-moz-selection {
        background: 0 0
    }

    .tg-sort-header::selection {
        background: 0 0
    }

    .tg-sort-header {
        cursor: pointer
    }

        .tg-sort-header:after {
            content: '';
            float: right;
            margin-top: 7px;
            border-width: 0 5px 5px;
            border-style: solid;
            border-color: #404040 transparent;
            visibility: hidden
        }

        .tg-sort-header:hover:after {
            visibility: visible
        }

    .tg-sort-asc:after, .tg-sort-asc:hover:after, .tg-sort-desc:after {
        visibility: visible;
        opacity: .4
    }

    .tg-sort-desc:after {
        border-bottom: none;
        border-width: 5px 5px 0
    }
</style>
<table class="tg" width="100%">
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td class="tg-0pky full-click" href="?id=@Html.DisplayFor(modelItem => item.Id)">
            <a href="?id=@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Nickname)</a><br />
            <small>@Html.DisplayFor(modelItem => item.Account_Type)</small>
            </td>
            <td class="tg-money full-click" href="?id=@Html.DisplayFor(modelItem => item.Id)">
            @Html.DisplayFor(modelItem => item.Balance)<br />
            <small>@Html.DisplayFor(modelItem => item.Interest_rate)%</small>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
$(".full-click").click(function() {
    window.location = $(this).attr("href");
    return false;
});
</script>
